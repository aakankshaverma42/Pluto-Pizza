</head>

<body>
   <nav class="container mx-auto flex items-center justify-between py-1">
       <div>
           <img src="I will.png" alt="logo"width="100" height="74" PIzza>
       </div>
       <div>
           <ul class="flex items-center">
               <li class="ml-6" ><a href="#">Menu</a></li>
               <li class="ml-6" ><a href="/login">Login</a></li>
               <li class="ml-6"><a href="/signup">Signup</a></li>
               <li class="ml-6"><a href="#">Admin</a></li>
               <li class="ml-6"><a href="/card" class="inline-block px-4 py-2"><img src="card.png" style="color: rgb(240, 171, 23);" alt="logo" width="100" height="74"></a></li>
           </ul>
       </div>
   </nav>
  
  <section class="hero py-16">
       <div class="container mx-auto flex items-center justify-between">

       </div class="w-1/2">
       <h6 class="text-lg ml-16"><em>Are you Hungry?</em></h6>
       <h1 class="text-6xl font-bold ml-12">Don't Wait !</h1>
       <button class=" ml-12" type="submit" style="color: rgb(240, 101, 21);;" >ORDER NOW</button>
       </div>  
         
         <div class="w-1/2" style="
         margin-left: 567px;
         margin-top: -164px;">
                <img src="PLUTO PIZZA.png" alt="">
              </div>
       </div>
       </section>
   </section>
   <section class="menu container mx-auto py-8">
       <h1 class="text-xl  font-bold ml-8">All Pizzas</h1>
       <div class="grid grid-col-4 col-gap-8">
        

        <% pizzas.forEach(pizza => { %>
            <div class="w=64">
                <img class="h=40 mb-4 mx-auto" src="Pepperoni.png" alt=""width="300" height="100">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></spam>
                        <div class="flex items-center justify-around mt-6">
                            <span class="font-bold text-lg">$<%= pizza.price %></span>
                            <button class="add-to-card py-1 px-6 rounded-full flex items-center font-bold">
                                <span style="background-color: cyan" >+ Add</span>
                            </button>
                        </div>
                    </span>
                </div>
             </div>
            </div>
        <% }) %>
       </div>
      
   </section>
   <script src="/model/app.js"></script>
